<div class="page-header">
<h1>todos los estados</h1>
  
</div>

<%= link_to "Crea una nueva propuesta", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>

<div class="status">

<strong><%= status.nombre %></strong>
<p><%= status.contenido%></p>
  <div>
    <%= link_to "Hace "+ time_ago_in_words(status.created_at), status %>
    <span class="admin">
     | <%= link_to "Editar" , edit_status_path(status) %> |
    <%= link_to "Borrar", status, method: :delete, data: {confirm: "estas seguro que quieres borrar tu propuesta"}  %>


      
    </span>
  </div>
</div>



  <% end %>